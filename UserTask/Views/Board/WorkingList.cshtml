@model IEnumerable<UserTask.Library.Entity.Model.Activities>

@{
    ViewData["Title"] = "WorkingList";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Float four columns side by side */
        .column {
            float: left;
            width: 450px;
            padding: 0 10px;
        }

        .new {
            padding-left: 347px;
        }

        /* Remove extra left and right margins, due to padding */
        .row {
            margin: 0 -5px;
        }

            /* Clear floats after the columns */
            .row:after {
                content: "";
                display: table;
                clear: both;
            }

        /* Responsive columns */


        /* Style the counter cards */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 16px;
            text-align: center;
            background-color: #f1f1f1;
        }
        #card2 {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 1px;
            text-align: center;
            background-color: #f1f1f1;
            
        }
    </style>
</head>




<div class="row">
    
    <div class="column">
        <a asp-controller="Task" asp-action="Create" class="btn btn-info" style="margin-bottom: 10px;
    margin-left: 300px;">Go To Task <i class="fa fa-list-alt" aria-hidden="true"></i>  </a>
        <div class="card">
            <h3><i class="fa fa-list-alt" aria-hidden="true"></i>  To do List</h3>


            <table class="table">

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>


                                @item.Name
                            </td>
                            @if (@item.Completed)
                            {


                                <td>
                                    @item.Completed
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a asp-action="completed" asp-route-id="@item.Id"><i class="fa fa-plus-square-o" aria-hidden="true"></i> Completed</a>

                                </td>
                            }

                        </tr>
                    }
                </tbody>
            </table>




        </div>

    </div>

    <div class="column" style="margin-left: 217px;">
        <h3><i class="fa fa-commenting" aria-hidden="true"></i> Activity</h3>
        <div id="card2">

            @foreach (var item in ViewBag.lst)
            {

                <div class="card-body">
                    <div style="background-color:rgb(128, 128, 128);color:black;padding:20px;">

                        <p>@item.Name<span>&nbsp;@item.Status</span>&nbsp;<strong>@item.FullName</strong></p>
                    </div>

                </div>



            }
        </div>


    </div>

</div>
<script src="https://use.fontawesome.com/4131084efc.js"></script>
<script>
    setTimeout(function () {
        window.location.reload(1);
    }, 105000);
</script>